[core]
    pager = less -F

[alias]
    brancha = branch --all
    clone = clone --filter blob:none
    graph = log --graph --date=short --pretty=tformat:\"%x09%ad %C(blue bold)%an%x09%Creset %C(yellow)%h%C(green bold)%d%Creset %s\"
    grapha = graph --branches --tags --remotes

[color]
    ui = auto
    quotePath = false

[credential]
    helper = libsecret

[diff]
    algorithm = histogram

[fetch]
    prune = true
    pruneTags = true

[init]
    defaultBranch = master

[merge]
    ff = false

[pull]
    ff = only

[push]
    followTags = true


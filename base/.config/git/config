[core]
    pager = less -F
    quotePath = false

[alias]
    cloneb = clone --filter blob:none
    ff = merge --ff-only
    graph = log --graph --date=short --pretty=tformat:\"%x09%ad %C(blue bold)%an%x09%Creset %C(yellow)%h%C(green bold)%d%Creset %s\"
    grapha = graph --branches --tags --remotes

[color]
    ui = auto

[credential]
    helper = libsecret

[diff]
    algorithm = histogram
    tool = nvimdiff

[difftool]
    prompt = false

[difftool.nvimdiff]
    cmd = nvim -dR "${LOCAL}" "${REMOTE}"

[fetch]
    prune = true
    pruneTags = true

[init]
    defaultBranch = master

[merge]
    conflictStyle = diff3
    ff = false

[pull]
    ff = only

[push]
    followTags = true

[user]
    name = syuzuki
    email = 77492100+syuzuki@users.noreply.github.com

[include]
    path = config.local

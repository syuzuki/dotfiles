[core]
    pager = less -F
    quotePath = false

[alias]
    ad = add
    adp = ad -p
    adu = ad -u
    br = branch
    bra = br -a
    ci = commit
    cloneb = clone --filter blob:none
    di = diff
    din = di --name-status
    dis = di --staged
    disn = dis --name-status
    dist = dit --staged
    dit = difftool
    ff = merge --ff-only
    gr = log --graph --pretty=\"%>|(31)%ad %C(blue bold)%<(10)%an%C(auto) %h %s%d\"
    gra = gr --branches --tags --remotes
    me = merge
    rs = restore --staged
    ss = stash
    sh = show
    shn = show --name-status
    st = status
    sw = switch

[color]
    ui = auto

[commit]
    gpgsign = true

[credential]
    helper = libsecret

[diff]
    algorithm = histogram
    tool = nvimdiff

[difftool]
    prompt = false

[difftool.nvimdiff]
    cmd = nvim -dR "${LOCAL}" "${REMOTE}"

[fetch]
    prune = true
    pruneTags = true

[init]
    defaultBranch = master

[log]
    date = iso

[merge]
    conflictStyle = diff3
    ff = false

[pull]
    ff = only

[push]
    followTags = true

[tag]
    sort = -v:refname

